# Copy this to secrets.toml locally, or add to Streamlit Cloud Settings > Secrets
# The [competitors] section contains your private competitor URLs

ANTHROPIC_API_KEY = "sk-ant-..."
SCREENSHOTONE_API_KEY = ""  # Optional

# Add your competitors below (this keeps URLs private)
[competitors.BrandName]
urls = ["https://example.com/products/"]
needs_js = true
social = ["https://facebook.com/example"]

[competitors.AnotherBrand]
urls = ["https://another.com/shop/"]
needs_js = false
social = []
